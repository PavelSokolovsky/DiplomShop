<Window x:Class="DiplomShop.Views.Windows.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomShop.Views.Windows"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Frame x:Name="frame" Grid.Row="0" NavigationUIVisibility="Hidden"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Мои материалы"  Name="MyProducts" Click="MyProducts_Click" />
            <Button Content="Изменить материалы"  Name="ChangeAmount" Click ="ChangeAmount_Click" />
            <Button Content="Заказы"  Name="OrdersHistory" Click="OrdersHistory_Click"/>
            <Button Content="Выход" Name="ExitBtn" />

        </StackPanel>
    </Grid>
</Window>
